                    <div class="col-md-12">
                        <h1 class="text-center">ФОТО</h1>
                    </div>
                    <div class="col-md-12">
                        {% if galleries is defined %}
                        <div class="row">
                            {% for g in galleries %}
                                {% if g.path != null %}
                                    <div class="col-xs-12 col-md-3">
                                        <h5 style="margin-bottom: 0"><b>{{ g.title }}</b></h5>
                                        <div class="single-article-info" style="color: #3a7130">
                                            <i class="fa fa-calendar" aria-hidden="true"></i>
                                            {{ g.translatable.creation|date('d.m.Y') }}
                                        </div>
                                        <a class="embed-responsive embed-responsive-4by3" href="{{ path('galleries_pictures_view_one', {'slug':g.slug}) }}">
                                            <img style="margin: 10px 0; width: 100%; height: auto" class="img img-responsive" src="/data/images/gallery/{{ g.translatable.path }}" alt="">
                                        </a>
                                    </div>
                                {% endif %}
                            {% endfor %}
                            <div class="col-xs-12 col-md-3">
                                <br>
                                <a class="embed-responsive embed-responsive-4by3" href="{{ path('galleries_pictures_view_all') }}">
                                    <img style="margin: 10px 0; width: 100%; height: auto" class="img img-responsive" src="/bundles/app/base/images/eye-icon.png" alt="">
                                </a>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
