{% extends '::base.html.twig' %}

{% block style %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/app/base/libs/fancybox/jquery.fancybox.min.css') }}" />
{% endblock %}

{% block header %}
    <div class="top_green_block">
        <h1 class="text-center">ГАЛЕРЕЯ</h1>
    </div>
{% endblock %}

