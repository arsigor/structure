{% extends '::admin.html.twig' %}

    {% block body %}
        <section class="content-header">
            <h1>{{ 'video.test.pageTitle'|trans }}</h1>
            <ol class="breadcrumb">
                <li><a href="{{ path('homepage') }}"><i class="fa fa-home"></i> {{ 'Home'|trans }}</a></li>
                <li><a href="{{ path('admin') }}">{{ 'admin'|trans }}</a></li>
                <li><a href="{{ path('admin_gallery_video_view') }}">{{ 'video.show.all.pageTitle'|trans }}</a></li>
                <li class="active">{{ 'video.test.pageTitle'|trans }}</li>
            </ol>
        </section>
        <section class="content">
            <div class="well well-white-group">
                <div class="row">
                    <div class="col-lg-12">
                        <h4>
                        {% if video != null %}
                            {{ 'SEO title'|trans }}: {{ video.title }}
                        {% else %}
                            Error
                        {% endif %}
                        </h4>
                    </div>
                    <div class="col-lg-6">
                        {% if video != null %}
                            <iframe src="http://www.youtube.com/embed/{{ iframe }}" type="text/html" width="400" height="300" frameborder="0"></iframe>
                        {% else %}
                            Error
                        {% endif %}
                    </div>
                    <div class="col-lg-6">
                        {% if video != null %}
                            {{ 'SEO description'|trans }}:<br>
                            {{ video.description|raw }}
                        {% else %}
                            <h2 class="text-danger" style="margin-top: 0px;">Post "{{ app.request.get('slug') }}" not found</h2>
                        {% endif %}
                    </div>
                </div>
            </div>
        </section>

    {% endblock %}