{% trans_default_domain 'FOSUserBundle' %}

<div class="register-box" style="margin: 4% auto;">
    <div class="register-logo">
        <a href="{{ path('homepage') }}">Sciamanesimo</a>
    </div>
    <div class="register-box-body">
        <p class="login-box-msg">Password Recovery</p>

        <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" method="post" role="form" enctype="multipart/form-data">
            <div class="form-group has-feedback">
                {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control',
                    'placeholder': 'Passwd'|trans} }) }}
                {{ form_errors(form.plainPassword.first) }}
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control',
                    'placeholder': 'RePasswd'|trans} }) }}
                {{ form_errors(form.plainPassword.second) }}
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <button type="submit" class="btn btn-warning btn-block btn-flat">{{ 'resetting.reset.submit'|trans }}</button>
            </div>
            {{ form_widget(form) }}
            {{ form_rest(form) }}
        </form>
    </div>
    <!-- /.form-box -->
</div>